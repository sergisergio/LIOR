{% extends 'base.html.twig' %}

{% block body %}
    <h1>Connexion</h1>

    <form action="{{ path('security_login') }}" method="post">
        <div class="form-group">
            <input placeholder="Adresse Email" type="text" name="_username" id="" required class="form-control">
        </div>
        <div class="form-group">
            <input placeholder="Mot de passe" type="password" name="_password" id="" required class="form-control">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Connexion !</button>
        </div>
    </form>
{% endblock %}